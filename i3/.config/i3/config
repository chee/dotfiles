## LAUNCH MODE ##
mode "launch" {
		bindsym f exec firefox; mode "default"; exec killall i3-nagbar
		bindsym s exec steam; mode "default"; exec killall i3-nagbar
		bindsym p exec pcmanfm; mode "default"; exec killall i3-nagbar

		
		bindsym Return mode "default"; exec killall i3-nagbar
        bindsym Escape mode "default"; exec killall i3-nagbar
}

bindsym $mod+x mode "launch"; exec "i3-nagbar -m 'f: firefox, s: steam, p:pcmanfm'

